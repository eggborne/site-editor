{
  "rules": {
    "clients": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid"
      }
    },
    "sites": {
      ".read": "auth != null",
      "$siteId": {
        ".write": "auth != null",
        "test": {
          ".read": true
        },
        "prod": {
          ".read": true
        }
      }
    }
  }
}